<style>
    .maincontainer{
        background-color:#192a56;
        width:auto;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        
    }
    .box{
        width: 80%;
        height: auto;
        background: #fff;
        border-radius: 10px;
        padding: 15px;
        

    }
    .heading{
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: bold;
        color: #192a56;
        display: flex;
        margin-bottom: 10px;
        
    }
    .daysstyle{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-evenly;
    }
    .buttonstyle{
      width: 100%;

    }
    
</style>
<html>
    <head>
        <title>Flight Interface</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    
    </head>
    
    <body>
        
        <div class="maincontainer">
        <div class="box">
            <div class="heading">
              <a href="/flight/flightinterface">  <img src="/images/addrecord.png" width="30"></a>
              <img src="/images/flight1.png" width="50">
                 List of Flights
          </div>
        <table class="table table-hover">
            <thead>
              <tr>
                
                <th scope="col">Flight Name</th>
                <th scope="col">Days/<br>Seats</th>
                <th scope="col">Source City</th>
                <th scope="col">Destination city</th>
                <th scope="col">company</th>
                <th scope="col">Logo</th>
                <th scope="col">Edit/Delete</th>

              </tr>
            </thead>
            <tbody>
              <tr>
                <% data.map((item)=>{%>
                <th scope="row">
                    <%=item.flightname %>
                    <br>
                    <%=item.flighttype %> 
                </th>
                <td>
                    <%=item.days %>
                    <br>
                    <%=item.seats %>
                </td>
                <td>
                    <%=item.source %>
                    <br>
                    <%=item.departuretime %>
                </td>
                <td>
                    <%=item.destination %>
                    <br>
                    <%=item.arrivaltime %>
                </td>
                <td>
                    <%=item.company %>
                </td>
                <td>
                <a href="/flight/searchbyidforimage?fid=<%=item.flightid %>"> <img src="/images/<%=item.logo %>" width="30"/></a>
                </td>
                <td>
                    <a href="/flight/searchbyid?fid=<%=item.flightid%>">
                    Edit/Delete
                    </a>
                </td>
              </tr>
            <% }) %>
              
            </tbody>
          </table>
        </head>
</div>
</div>
    <body> 

 </body>   
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  
</html>